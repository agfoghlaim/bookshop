<div class="page-heading">
    <h1 class="text-center"><span class="book-cursive ">Register</span> </h1>
    <p class="text-center">
      
      </p>
</div>

<% include ./partials/messages %>

<form action="/users/register" method="POST" class="registerForm">
  <label for="name"><h5 class="book-cursive text-white loginRegLabel">Name</h5></label>
  <input 
  type="name"
  id="name"
  name="name"
  class="form-control"
  placeholder="Enter Name..."
  value="<%= typeof name != 'undefined' ? name : '' %>"
  >
  <br><br>
  <label for="email"><h5 class="book-cursive text-white loginRegLabel">Email</h5></label>
  <input 
  type="email"
  id="email"
  name="email"
  class="form-control"
  placeholder="Enter Email..."
  value="<%= typeof email != 'undefined' ? email : '' %>"
  >
  <br><br>
  <label for="password"><h5 class="book-cursive text-white loginRegLabel">Password</h5></label>
  <input 
  type="password"
  id="password"
  name="password"
  class="form-control"
  placeholder="Enter password..."
  value="<%= typeof password != 'undefined' ? password : '' %>"
  >
  <br><br>
  <label for="password2"><h5 class="book-cursive text-white loginRegLabel">Confirm Password</h5></label>
  <input 
  type="password"
  id="password2"
  name="password2"
  class="form-control"
  placeholder="Enter password again..."
  value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
  >
  <br><br>
  <button class="btn btn-sm btn-light" type = "submit">Register</button>
</form>

<p><a href="/users/login">Login</a></p>