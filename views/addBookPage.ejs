


    <div class="container" style="margin-top:150px;">
        <% include ./partials/messages %>
     
      </div>

  

  <section class="add-product-section">
      <div class="container" style="margin-top:150px;">
          <h4>Fill out the form below or enter the isbn of your book to prepopulate form with data from Google Books </h4>
          <p>isbns for testing</p>
          <p>9780241184240</p>
          <label for="isbn-in">Isbn</label>
          <input type="text" id="isbn-in" value="9781782166337">
          <button id="btn">get info</button>
    
    
          <form action="/addBook" 
          method="post" 
          accept-charset="UTF-8" 
          enctype="multipart/form-data">
            
    
            <div class="form-group">
                <label for="uploadImg">Upload Image</label><br>
                <input type="file" class="form-control-file" name="uploadImg" id="">
              </div>
    
    
            <img src="" alt="" id="thumb" name="imageurl">

            <!-- HIDE FIELD isbn.js will populate this with api img url -->
            <input type="text" id="imageurl" name="imageurl" value="">
            <br><br>
            <div class="form-group">
                <label for="title">Title:</label><br>
                <input type="text" id="title" name="title" value="">
            </div>
            <div class="form-group">
                <label for="author">Author:</label><br>
                <input type="text" name="author" id="author" value="">
            </div>
            <div class="form-group">
                <label for="description">Description:</label><br>
                <textarea class="form-control" rows="15" type="textarea" name="description" id="description" value=""></textarea>
            </div>

            <div class="form-group">
                <label for="userReview">User Review:</label><br>
                <textarea class="form-control" rows="15" type="textarea" name="userReview" id="userReview" value=""></textarea>
            </div>

            <div class="form-group">
                <label for="condition">Condition:</label><br>
                <select class="form-control"  name="condition" id="condition" value="">
                    <option value="good">Good</option>
                    <option value="bad">Bad</option>
                </select>
            </div>


            <div class="form-group">
                <label for="price">Price:</label><br>
                <input class="form-control" rows="15" type="text" name="price" id="price" value="">
            </div>
          
            <input type="submit" value="Save">
    
          </form> 
        </div>
  </section>
  
 