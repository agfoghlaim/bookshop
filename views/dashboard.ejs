<h1>Dashboard</h1>
<p>Welcome <%= user.name %></p>
<% include ./partials/messages %>

<% if(typeof userMessages != 'undefined'){ %>
  <h5>You have <%= userMessages.length %> messages.</h5>
  

  <% userMessages.forEach(function(b,i){ %>
   
    <p class="dashboard-message-head"><%= i+1 %>. <small>Sent on <%= b.msgWhen.substr(0,10) %>
    at <%= b.msgWhen.substr(11,5) %></small></p>
    
    <p class="dashboard-message"><%= b.theMsg %></p>
    <% }) %>
  <% } %>

<div class="container">
  <div class="row">

    <!-- all books by this user (from json) -->
    <div class="col-md-6">
      <div id="dashboard-json-col">
        <h2>All your books</h2>
        <% usersBooks.forEach(function(b){ %>
          <h5><%= b.title %><small> by 
          <%= b.author %></small></h5>

         
          <img class="thumbnail-size-img" src="<%= b.imageurl %>">
         

          <p><%= b.description %></p>
          <p>forSale: <%= b.forSale %></p>
          <p>Price: <%= b.price || 'no price listed' %></p>
          <a href="/deleteBook/<%= b.id %>" class="btn btn-danger">Delete</a>
          <button class="btn btn-danger" 
                  data-bookid="<%= b.id %>" 
                  id="deleteJsonBook"
                  data-forSale="<%= b.forSale %>"
                  data-shopid="<%= b.shopID %>">Delete (clientside)</button>
          <a href="/editJsonBook/<%= b.id %>" class="btn btn-info">Edit</a>
          <a href="/shop/addsqlbook/<%= b.id %>" class="btn btn-primary">Sell</a>
        
        <% }) %>
      </div>  
    </div>

    <!-- books for sale from this user (sql) -->
    <div class="col-md-6">
      
      <h2>Your Books for sale</h2>
      <p>add here from sql db</p>
      <button id="getallbooks">Show my Books for Sale</button>

      <div class="col" id="shop-books">
     
      </div>
        


    </div><!--end col md 6 -->


  </div>
</div>

<a href="/users/logout">Logout</a>